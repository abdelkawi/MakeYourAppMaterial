<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="photo_style">
        <item name="android:background">@color/photo_placeholder</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="title_style" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="body_style" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/detail_body_text_size</item>
        <item name="android:lineSpacingMultiplier">@fraction/detail_body_line_spacing_multiplier</item>
        <item name="android:textColorLink">@color/colorAccent</item>
    </style>

    <style name="author_style" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="button_style">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="extended_title_style">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="collapsed_title_style">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
